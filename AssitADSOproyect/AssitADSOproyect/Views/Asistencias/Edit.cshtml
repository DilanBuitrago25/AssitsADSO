@model ClaseDatos.Asistencia

@{
    ViewBag.Title = "Edit";
}


<br />

<div class="page-header">
    <div class="row">
        <div class="col-sm-6">
            <h3>Registrar Asistencia</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                <li class="breadcrumb-item">Asistencia                                     </li>
                <li class="breadcrumb-item active">Registrar</li>
            </ol>
        </div>
        <div class="col-sm-6">

        </div>
    </div>
</div>
          </div>
<!-- Container-fluid starts-->
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="form theme-form">
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <label>Ficha</label>
                                        <div class="input-group">
                                            @Html.DropDownList("Id_ficha", null, "Selecciona una Ficha", new { @class = "js-example-basic-single col-sm-12 form-control", onchange = "cargarCompetencias()" })

                                        </div>
                                        @Html.ValidationMessageFor(model => model.Id_ficha, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <label>Competencia</label>
                                        <div class="input-group">
                                            @Html.DropDownList("Id_competencia", null, "Selecciona una Competencia", htmlAttributes: new { @class = "js-example-basic-single col-sm-12 form-control" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Id_competencia, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4">
                                    <div class="mb-3">
                                        <label>Fecha</label>
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Fecha_asistencia, new { htmlAttributes = new { @class = "form-control digits", @type = "text", languaje = "es", @id = "minMaxExample", autocomplete = "off" } })

                                        </div>
                                        @Html.ValidationMessageFor(model => model.Fecha_asistencia, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="mb-3">
                                        <label>Hora Inicio</label>
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Hora_inicio_asistencia, new { htmlAttributes = new { @class = "form-control digits", @type = "time" } })

                                        </div>
                                        @Html.ValidationMessageFor(model => model.Hora_inicio_asistencia, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-sm-4">
                                    <div class="mb-3">
                                        <label>Hora Fin</label>
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Hora_fin_asistencia, new { htmlAttributes = new { @class = "form-control digits", @type = "time" } })

                                        </div>
                                        @Html.ValidationMessageFor(model => model.Hora_fin_asistencia, "", new { @class = "text-danger" })

                                    </div>
                                </div>
                                @Html.HiddenFor(model => model.Id_Instructor, new { Value = @Session["Idusuario"].ToString() })
                            </div>

                            <div class="row">
                                <div class="col">
                                    <div class="mb-3">
                                        <label for="exampleFormControlTextarea4">Ingresar algunos Detalles</label>
                                        <div class="input-group">
                                            @Html.TextAreaFor(model => model.Detalles_asistencia, new { @class = "form-control", @id = "exampleFormControlTextarea4", @rows = "3" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Detalles_asistencia, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <div class="text-end">
                                        <button class="btn btn-success me-3" type="submit">Generar Qr</button>
                                        <button class="btn btn-danger" type="button">
                                            <a href="@Url.Action("Index", "Asistencias")">Cancelar</a>
                                        </button>
                                    </div>
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.Estado_Asistencia, new { Value = "True" })


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    // Elimina el atributo 'readonly' al cargar la página
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('@Html.IdFor(model => model.Id_asistencia)').removeAttribute('readonly');
    });
    document.addEventListener('DOMContentLoaded', function () {
        var inputs = document.querySelectorAll('.form-control');
        inputs.forEach(function (input) {
            input.removeAttribute('readonly');
        });
    });

    function cargarCompetencias() {
        var fichaId = $("#Id_ficha").val();
        $.ajax({
            url: '@Url.Action("ObtenerCompetenciasPorFicha", "Asistencias")', // Cambiar el controlador
            type: 'GET',
            data: { idFicha: fichaId },
            success: function (data) {
                var selectCompetencia = $("#Id_competencia");
                selectCompetencia.empty();
                $.each(data, function (index, competencia) {
                    selectCompetencia.append($('<option></option>').val(competencia.Value).text(competencia.Text));
                });
            }
        });
    }
</script>
