@model IEnumerable<ClaseDatos.Usuario>

@{
    ViewBag.Title = "Index";
}


<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Gestionar Aprendiz</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Gestionar Aprendiz</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
            
               
            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        
        <div class="card-header d-flex align-items-center">
            <div class="col-sm-4">
                <h5>Tabla de datos - Aprendices</h5>
                <br />
                @using (Html.BeginForm("Index", "UsuariosAprendiz", FormMethod.Get))
                {
                    <div class="d-flex align-items-center">
                        <label for="estadoFiltro" class="me-2">Estado:</label>
                        <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                            <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                            <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                            <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                        </select>
                        <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                    </div>
                }
            </div>
            <div class="col-sm-8 d-flex justify-content-end">
                <button class="btn btn-light"><a href="@Url.Action("Create","UsuariosAprendiz")">Crear</a></button>
            </div>
        </div>
     
        
        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "UsuariosAprendiz")'" id="BottomPdf">
                Generar Reporte PDF
            </button>
            <div class="table-responsive">
                <table class="display" id="example-style-1">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Documento</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Acciones</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Tipo_Documento_usuario)
                                    @Html.DisplayFor(model => item.Documento_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Nombre_usuario)
                                    @Html.DisplayFor(model => item.Apellido_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Correo_usuario)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(model => item.Id_ficha)
                                </td>*@
                            <td>
                                @Html.ActionLink("Editar", "Edit", new { id = item.Id_usuario }) |
                                @Html.ActionLink("Detalles", "Details", new { id = item.Id_usuario }) |
                                @Html.ActionLink("Fichas", "Fichas_Aprendiz", new { id = item.Id_usuario }) |
                                @Html.ActionLink("Generar Nueva Contraseña", "GenerarNuevaContrasena", new { idUsuario = item.Id_usuario }, new { data_toggle = "modal", data_target = "#nuevaContrasenaModal" })

                                <div class="modal fade" id="nuevaContrasenaModal" tabindex="-1" role="dialog" aria-labelledby="nuevaContrasenaModalLabel" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                        </div>

                                    </div>
                                </div>
                            </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Documento</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $('#nuevaContrasenaModal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget);
        var url = button.attr('href');

        var modal = $(this);
        modal.find('.modal-content').load(url);
    });
</script>