@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Registrar Competencia</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">

                                @Html.AntiForgeryToken()
                                <form>
                                    <div class="mb-3 input-group-solid">
                                        <label class="form-label">Tipo Competencia</label>
                                        <div class="input-group">
                                            @Html.DropDownListFor(model => model.tipo_competencia, new List<SelectListItem>
                                                {
                                                     new SelectListItem { Text = "", Value = "" },
                                                     new SelectListItem { Text = "Tecnica", Value = "Tecnica" },
                                                     new SelectListItem { Text = "Transversal", Value = "Transversal" },
                                                }, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.tipo_competencia, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 m-form__group">
                                        <label class="form-label">Nombre</label>
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Nombre_competencia, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Nombre_competencia, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 input-group-solid">
                                        <label class="form-label">Codigo Ficha</label>
                                        <div class="input-group">
                                            @Html.DropDownList("Numero_ficha", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Numero_ficha, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 m-form__group">
                                        <label class="form-label">Programa de formación</label>
                                        <div class="input-group">
                                            @Html.DropDownList("Id_programa", null, htmlAttributes: new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Id_programa, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary m-r-15" type="submit">Submit</button>
                        <button class="btn btn-light" type="button"><a href="@Url.Action("Index","Competencias")">Cancelar</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


