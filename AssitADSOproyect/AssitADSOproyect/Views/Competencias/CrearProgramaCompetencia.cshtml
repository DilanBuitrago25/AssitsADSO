@model ClaseDatos.Programa_formacion

@using (Html.BeginForm("GuardarRelacionProgramaCompetencia", "Competencias", FormMethod.Post))
{


    <div class="form-group">
        @Html.LabelFor(model => model.Id_programa, "Programa")
        @Html.DropDownListFor(model => model.Id_programa, new SelectList(ViewBag.ProgramasDisponibles, "Id_programa", "Nombre_programa"), "Selecciona un programa", new { @class = "form-control" })
    </div>

    <input type="hidden" name="competenciaId" value="@ViewBag.CompetenciaId" />

    <button type="submit" class="btn btn-primary">Asociar Programa</button>
}

