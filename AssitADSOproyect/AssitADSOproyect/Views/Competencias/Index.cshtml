<!-- Individual column searching (text inputs) Starts-->
<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Individual column searching (text inputs) </h5><span>The searching functionality provided by DataTables is useful for quickly search through the information in the table - however the search is global, and you may wish to present controls that search on specific columns.</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="display" id="row-select-delete">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Nombre</th>
                            <th>Programa Formacion</th>
                            <th>Ficha</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id_competencia))</td>
                                @*<td>@Html.DisplayFor(model => item.Nombre_ficha)</td>*@
                                <td>@Html.DisplayFor(model => item.tipo_competencia)</td>
                                <td>@Html.DisplayFor(model => item.Nombre_competencia)</td>
                                <td>@Html.DisplayFor(model => item.Programa_formacion.Nombre_programa)</td>
                                <td>@Html.DisplayFor(model => item.Ficha.Id_ficha)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_competencia }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id_competencia })
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Nombre</th>
                            <th>Programa Formacion</th>
                            <th>Ficha</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

