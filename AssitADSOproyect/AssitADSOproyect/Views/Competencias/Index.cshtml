@model IEnumerable<ClaseDatos.Competencia>

@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/datatables")
<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Gestionar Competencias</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Competencias</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
                
            </div>
        </div>
    </div>
</div>
<!-- Individual column searching (text inputs) Starts-->
<div class="col-sm-12">
    <div class="card">
        <div class="row">
            <div class="card-header d-flex align-items-center">
                <div class="col-sm-4">
                    <h5>Tabla de datos - Competencias</h5>
                    <br />
                    @using (Html.BeginForm("Index", "Competencias", FormMethod.Get))
                    {
                        <div class="d-flex align-items-center">
                            <label for="estadoFiltro" class="me-2">Estado:</label>
                            <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    <button class="btn btn-light">
                        <a href="@Url.Action("Create","Competencias")">Crear</a>
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "Competencias")'" id="BottomPdf">
                Generar Reporte PDF
            </button>
            <div class="table-responsive">
                <table class="display datatables" id="ajax-data-object">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id_competencia)</td>
                                <td>@Html.DisplayFor(model => item.tipo_competencia)</td>
                                <td>@Html.DisplayFor(model => item.Nombre_competencia)</td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_competencia }) |
                                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_competencia }) |
                                    @Html.ActionLink("Programas", "CompetenciaProgramas", new { id = item.Id_competencia })
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Nombre</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>




        </div>
    </div>
@Scripts.Render("~/Content/datatables")
