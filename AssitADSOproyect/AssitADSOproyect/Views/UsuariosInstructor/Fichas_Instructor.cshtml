@model IEnumerable<ClaseDatos.Ficha>



<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Fichas Asociadas al Instructor: @ViewBag.Nombre_Instructor @ViewBag.Apellido_Instructor</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Gestionar Instructor</li>
                    <li class="breadcrumb-item">@ViewBag.Nombre_Instructor @ViewBag.Apellido_Instructor</li>
                    <li class="breadcrumb-item active">Consultar Fichas Asociadas</li>
                </ol>
            </div>
            <div class="col-sm-6">

            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="row">
            <div class="card-header d-flex align-items-center">
                <div class="col-sm-4">
                    <h5>Tabla de datos - Fichas</h5>
                    <br />
                    @using (Html.BeginForm("Index", "Programa_formacion", FormMethod.Get))
                    {
                        <div class="d-flex align-items-center">
                            <label for="estadoFiltro" class="me-2">Estado:</label>
                            <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Asociar_Ficha_Instructor", "UsuariosInstructor", new { idInstructor = ViewBag.InstructorId })'">
                        Asociar Ficha
                    </button>
                </div>
            </div>
        </div>

        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "Programa_formacion")'" id="BottomPdf">
                Generar Reporte PDF
            </button>
            <div class="table-responsive">
                <table class="display datatables" id="ajax-data-object">
                    <thead>
                        <tr>
                            <th>Codigo</th>
                            <th>Jornada</th>
                            <th>Modalidad</th>
                            <th>Tipo</th>
                            <th>Programa de formación</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Codigo_ficha)</td>
                                <td>@Html.DisplayFor(model => item.Jornada_ficha)</td>
                                <td>@Html.DisplayFor(model => item.Modalidad_ficha)</td>
                                <td>@Html.DisplayFor(model => item.tipo_ficha)</td>
                                <td>@Html.DisplayFor(model => item.Programa_formacion.Nombre_programa)</td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Codigo</th>
                            <th>Jornada</th>
                            <th>Modalidad</th>
                            <th>Tipo</th>
                            <th>Programa de formación</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col-sm-12 d-flex justify-content-end">
                <button class="btn btn-light" type="button" style="margin-top: 15px;"><a href="@Url.Action("Index","UsuariosInstructor")">Volver</a></button>
            </div>
        </div>
    </div>
</div>





