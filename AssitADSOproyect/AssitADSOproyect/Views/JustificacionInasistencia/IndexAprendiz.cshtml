@model IEnumerable<ClaseDatos.Soporte>
@{
    ViewBag.Title = "IndexAprendiz";
}

<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Justificaciones Inasistencia</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Aprendizs")">Home</a></li>
                    <li class="breadcrumb-item">Inasistencia</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
              
            </div>

        </div>
    </div>
</div>
<!-- Individual column searching (text inputs) Starts-->
<div class="col-sm-12">

    <div class="card">
        <div class="card-header">
            <h5>Tabla de Justificaciones Inasistencia</h5>
            <br />
            <button class="btn btn-light"><a href="@Url.Action("Create","JustificacionInasistencia")">Justificar Inasistencia</a></button>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="display" id="row-select-delete">
                    <thead>

                        <tr>
                            <th>Soporte</th>
                            <th>Tipo Soporte</th>
                            <th>Fecha Asistencia</th>
                            <th>Codigo Ficha</th>
                            <th>Competencia</th>
                            <th>Fecha Registro</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre_soporte)</td>
                                <td>@Html.DisplayFor(model => item.Archivo_soporte)</td>
                                <td>@Html.DisplayFor(model => item.Asistencia.Fecha_asistencia)</td>
                                <td>@Html.DisplayFor(model => item.Asistencia.Ficha.Codigo_ficha)</td>
                                <td>@Html.DisplayFor(model => item.Asistencia.Competencia.Nombre_competencia)</td>
                                <td>@Html.DisplayFor(model => item.Fecha_registro)</td>
                                <td>
                                    @Html.ActionLink("Details", "Details", new { id = item.Id_soporte })
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Soporte</th>
                            <th>Tipo Soporte</th>
                            <th>Fecha Asistencia</th>
                            <th>Codigo Ficha</th>
                            <th>Competencia</th>
                            <th>Fecha Registro</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>


