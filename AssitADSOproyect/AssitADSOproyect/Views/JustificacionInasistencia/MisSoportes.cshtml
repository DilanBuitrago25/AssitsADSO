@model IEnumerable<ClaseDatos.Soporte>

@{
    ViewBag.Title = "Index";
}

<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Gestionar Soportes</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Aprendiz</li>
                    <li class="breadcrumb-item">Soporte</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <div class="col-sm-8">
                <h5>Tabla de Justificaciones</h5>
                <br />
                @using (Html.BeginForm("GenerarReportePDFSoportesAprendiz", "JustificacionInasistencia", FormMethod.Post))
                {
                    <input type="hidden" name="id" value="@ViewBag.aprendizId" />
                    <button type="submit" class="btn btn-primary">Generar Reporte PDF</button>
                }

            </div>
            <div class="col-sm-4 ">
                @using (Html.BeginForm("Index", "Fichas", FormMethod.Get))
                {
                    <div class="d-flex align-items-center">
                        <label for="estadoFiltro" class="me-2">Estado:</label>
                        <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                            <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                            <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                            <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                        </select>
                        <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                    </div>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="display" id="example-style-1">
                    <thead>

                        <tr>
                            <th>Asunto</th>
                            <th>Fecha registro</th>
                            <th>Fecha Inasistencia</th>
                            <th>Codigo Ficha</th>
                            <th>Estado Soporte</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(model => item.Nombre_soporte)</td>
                                <td>@Html.DisplayFor(model => item.Fecha_registro)</td>
                                <td>@Html.DisplayFor(model => item.Asistencia.Fecha_asistencia)</td>
                                <td>@Html.DisplayFor(model => item.Asistencia.Ficha.Codigo_ficha)</td>
                                <td>@Html.DisplayFor(model => item.Validacion_Instructor)</td>

                                <td>
                                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_soporte })
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Asunto</th>
                            <th>Fecha registro</th>
                            <th>Fecha Inasistencia</th>
                            <th>Codigo Ficha</th>
                            <th>Estado Soporte</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
