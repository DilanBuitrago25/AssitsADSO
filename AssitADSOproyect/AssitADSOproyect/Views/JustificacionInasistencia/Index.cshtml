    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tabLinks = document.querySelectorAll('.nav-tabs .nav-link');
            const soporteItems = document.querySelectorAll('.soporte-item');

            tabLinks.forEach(link => {
                link.addEventListener('click', function (event) {
                    event.preventDefault();
                    const filtro = this.textContent.trim();

                    soporteItems.forEach(item => {
                        const estado = item.getAttribute('data-estado');

                        if (filtro === "Bandeja de Entrada" ||
                            (filtro === "No Leidos" && estado === "null") ||
                            (filtro === "Leidos" && estado !== "null") ||
                            (filtro === "Aceptados" && estado === "True") ||
                            (filtro === "Rechazados" && estado === "False")) {
                            item.style.display = 'block';
                        } else {
                            item.style.display = 'none';
                        }
                    });

                    // Actualiza la clase "active" de los enlaces
                    tabLinks.forEach(link => link.classList.remove('active'));
                    this.classList.add('active');
                });
            });

            // Activa el primer enlace por defecto al cargar la página
            tabLinks[0].click();
        });
    </script>
