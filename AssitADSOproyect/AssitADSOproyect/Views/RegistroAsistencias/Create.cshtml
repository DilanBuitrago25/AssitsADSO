@model ClaseDatos.RegistroAsistencia

@{
    ViewBag.Title = "Create";
}


<br />

<div class="page-header">
    <div class="row">
        <div class="col-sm-6">
            <h3>Registrar Asistencia</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index","Aprendizs")">Home</a></li>
                <li class="breadcrumb-item">Asistencia                                     </li>
                <li class="breadcrumb-item active">Confirmar</li>
            </ol>
        </div>
        <div class="col-sm-6">
          
        </div>
    </div>
</div>
          </div>
<!-- Container-fluid starts-->
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="form theme-form">
                            @*<div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <label>Tipo Asistencia</label>
                                            <input class="form-control" type="text" placeholder="Project name *">
                                        </div>
                                    </div>
                                </div>*@

                            <form>
                                <div class="form-group">
                                    @Html.HiddenFor(model => model.Id_asistencia)
                                </div>
                                @Html.HiddenFor(model => model.Id_Aprendiz)
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            @if (Session["NombreUsuario"] != null)
                                            {
                                                <label class="form-label">Aprendiz</label>
                                                <input class="form-control" id="exampleInputPassword22" type="text" disabled="" placeholder="@Session["NombreUsuario"].ToString()">
                                                @Html.HiddenFor(model => model.Id_Aprendiz, new { Value = @Session["Idusuario"].ToString() })
                                            }

                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <label class="form-label">Codigo Ficha</label>
                                            <input class="form-control" id="exampleInputPassword22" type="text" disabled="" value="@ViewBag.CodigoFicha" />
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <label class="form-label">Competencia</label>
                                            <input class="form-control" id="exampleInputPassword22" type="text" disabled="" placeholder="@ViewBag.Nombre_competencia">
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <label>Fecha de Registro</label>
                                            <div class="input-group">
                                                @Html.TextBoxFor(model => model.Fecha_registro, new
                                                {
                                                    @class = "form-control digits",
                                                    @readonly = "readonly",
                                                    @Value = DateTime.Now.ToString("MM/dd/yyyy")
                                                })

                                            </div>
                                            @Html.ValidationMessageFor(model => model.Fecha_registro, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="mb-3">
                                            <label>Hora de Registro</label>
                                            <div class="input-group" data-placement="left" data-align="top" data-autoclose="true">
                                                @Html.TextBoxFor(model => model.Hora_registro, new
                                                {
                                                    @class = "form-control digits",
                                                    @readonly = true,
                                                    @Value = DateTime.Now.ToString("HH:mm")
                                                })
                                                <span class="input-group-addon">
                                                    <span class="glyphicon glyphicon-time"></span>
                                                </span>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Hora_registro, "", new { @class = "text-danger" })
                                        </div>
                                        @Html.ValidationMessageFor(model => model.Id_asistencia, "", new { @class = "text-danger" })
                                    </div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                </div>
                                @Html.HiddenFor(model => model.Asistio_registro, new { Value = true })
                                @Html.HiddenFor(model => model.Id_Aprendiz, new { Value = @Session["Idusuario"].ToString() })
                              
                                <div class="row">
                                    <div class="col">
                                        <div class="text-end">

                                            @*<button class="btn btn-success me-3" type="submit">Confirmar Asistencia</button>*@
                                            <button class="btn btn-success sweet-8" type="submit" onclick="_gaq.push(['_trackEvent', 'example', 'try', 'sweet-8']);">Confirmar</button>

                                            <button class="btn btn-danger" type="button">
                                                <a href="@Url.Action("Index", "Aprendizs")">Cancelar</a>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    // Elimina el atributo 'readonly' al cargar la página
    @*document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('@Html.IdFor(model => model.Id_asistencia)').removeAttribute('readonly');
