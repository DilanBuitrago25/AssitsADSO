@model IEnumerable<ClaseDatos.RegistroAsistencia>

@{
    ViewBag.Title = "Index";
}


<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Asistencias Aprendiz</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Aprendizs")">Home</a></li>
                    <li class="breadcrumb-item">Asistencias</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
            
            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <div class="col-sm-8">
                <h5>Tabla de Asistencias</h5>
                <br />
                <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "RegistroAsistencias")'">
                    Generar Reporte PDF
                </button>
                    
            </div>
            <div class="col-sm-4 ">
                @using (Html.BeginForm("Index", "RegistroAsistencias", FormMethod.Get))
                {
                    <div class="d-flex align-items-center">
                        <label for="estadoFiltro" class="me-2">Estado:</label>
                        <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                            <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                            <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                            <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                        </select>
                        <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                    </div>
                }
            </div>
        </div>
        <div class="card-body">
            
            <div class="table-responsive">
                <table class="display datatables" id="ajax-data-object">
                    <thead>

                        <tr>
                            <th>Codigo Ficha</th>
                            <th>Fecha Asistencia</th>
                            <th>Fecha Registro Asistencia</th>
                            <th>Competencia</th>
                            <th>Asistió</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Asistencia.Ficha.Codigo_ficha)</td>
                                <td>@Html.DisplayFor(model => item.Asistencia.Fecha_asistencia)</td>
                                <td>@Html.DisplayFor(model => item.Fecha_registro)</td>
                                <td>@Html.DisplayFor(model => item.Asistencia.Competencia.Nombre_competencia)</td>
                                <td>@Html.DisplayFor(model => item.Asistio_registro)</td>
                                <td>
                                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_Registroasistencia })  |
                                    @if (item.Asistio_registro.HasValue && !item.Asistio_registro.Value &&!((ClaseDatos.BDAssistsADSOv4Entities)ViewBag.db).Soporte.Any(s => s.Id_asistencia == item.Id_asistencia && s.Id_Aprendiz == item.Id_Aprendiz))
                                    {
                                        @Html.ActionLink("Agregar Soporte", "Create", "JustificacionInasistencia", new { asistenciaId = item.Id_asistencia }, null)
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Codigo Ficha</th>
                            <th>Fecha Asistencia</th>
                            <th>Fecha Registro Asistencia</th>
                            <th>Competencia</th>
                            <th>Asistió</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>