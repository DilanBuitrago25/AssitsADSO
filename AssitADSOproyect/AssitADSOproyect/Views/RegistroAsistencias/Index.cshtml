<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Tabla de Asistencias</h5>
            @*<br />
            <button class="btn btn-light"><a href="@Url.Action("Create","Programa_formacion")">Crear</a></button>*@
        </div>
        @using (Html.BeginForm("Index", "RegistroAsistencias", FormMethod.Get))
        {
            <label for="estadoFiltro">Estado:</label>
            <select id="estadoFiltro" name="estadoFiltro">
                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Asistencia</option>
                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>Inasistencia</option>
            </select>
            <input type="submit" value="Filtrar" />
        }
    <div class="card-body">
        <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "RegistroAsistencias")'">
            Generar Reporte PDF
        </button>
        <div class="table-responsive">
            <table class="display" id="row-select-delete">
                <thead>

                    <tr>
                        <th>Codigo Ficha</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Competencia</th>
                        <th>Asistió</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Asistencia.Ficha.Codigo_ficha)</td>
                            <td>@Html.DisplayFor(model => item.Asistencia.Fecha_inicio_asistencia)</td>
                            <td>@Html.DisplayFor(model => item.Asistencia.Fecha_fin_asistencia)</td>
                            <td>@Html.DisplayFor(model => item.Asistencia.Competencia.Nombre_competencia)</td>
                            <td>@Html.DisplayFor(model => item.Asistio_registro)</td>
                            <td>
                                @Html.ActionLink("Details", "Details", new { id = item.Id_Registroasistencia })
                            </td>

                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Codigo Ficha</th>
                        <th>Fecha Inicio</th>
                        <th>Fecha Fin</th>
                        <th>Competencia</th>
                        <th>Asistió</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    </div>
</div>


