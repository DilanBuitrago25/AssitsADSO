@model ClaseDatos.Ficha_has_Usuario

<h2>Agregar Aprendiz a la Ficha @ViewBag.FichaId</h2>

@using (Html.BeginForm("Asociar_Aprendiz_Ficha", "Fichas", FormMethod.Post))
{
    @*@Html.HiddenFor(model => model.FichaId, new { Value = ViewBag.FichaId })*@

    <div class="form-group">
        <label for="AprendizId">Seleccionar Aprendiz:</label>
        @Html.DropDownListFor(model => model.Id_usuario, new SelectList(ViewBag.Aprendices, "Id_usuario", "Nombre_usuario"), "Seleccionar Aprendiz", new { @class = "form-control" })
    </div>

    <input name="FichaId" value="@ViewBag.FichaId" />

    <button type="submit" class="btn btn-primary">Agregar</button>
}

