@model IEnumerable<ClaseDatos.Usuario>

<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Instructores asociados a la Ficha: @ViewBag.CodigoFicha</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Ficha</li>
                    <li class="breadcrumb-item">@ViewBag.CodigoFicha</li>
                    <li class="breadcrumb-item active">Consultar Instructores</li>
                </ol>
            </div>
            <div class="col-sm-6">

            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="row">
            <div class="card-header d-flex align-items-center">
                <div class="col-sm-4">
                    <h5>Tabla de datos - Instructores</h5>
                    <br />
                    @using (Html.BeginForm("Index", "Programa_formacion", FormMethod.Get))
                    {
                        <div class="d-flex align-items-center">
                            <label for="estadoFiltro" class="me-2">Estado:</label>
                            <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    @if (@Session["TipoUsuario"].ToString() == "InstructorAdmin")
                    {
                        <button class="btn btn-primary" onclick="window.location.href='@Url.Action("Asociar_Instructor_Ficha", "Fichas", new { idFicha = ViewBag.FichaId })'">
                            Agregar Instructor
                        </button>
                    }
                </div>
            </div>
        </div>

        <div class="card-body">
            @using (Html.BeginForm("GenerarReportePDFInstructor", "Fichas", FormMethod.Post))
            {
                <input type="hidden" name="id" value="@ViewBag.FichaId" />
                <button type="submit" class="btn btn-primary">Generar Reporte PDF</button>
            }
            <div class="table-responsive">
                <table class="display" id="example-style-1">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Documento</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Tipo Instructor</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id_usuario)</td>
                                <td>
                                    @Html.DisplayFor(model => item.Tipo_Documento_usuario)
                                    @Html.DisplayFor(model => item.Documento_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Nombre_usuario)
                                    @Html.DisplayFor(model => item.Apellido_usuario)
                                </td>
                                <td>@Html.DisplayFor(model => item.Correo_usuario)</td>
                                <td>@Html.DisplayFor(model => item.Tipo_usuario)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Documento</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Tipo Instructor</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col-sm-12 d-flex justify-content-end">
                <button class="btn btn-light" type="button" style="margin-top: 15px;"><a href="@Url.Action("Index","Fichas")">Volver</a></button>
            </div>
        </div>
    </div>
</div>


