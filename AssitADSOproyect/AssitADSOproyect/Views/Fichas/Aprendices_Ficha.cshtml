@model IEnumerable<ClaseDatos.Usuario>

<h2>Aprendices asociados a la ficha: @ViewBag.NombreFicha</h2>

<ul>
    @foreach (var aprendiz in Model)
    {
        <li>@aprendiz.Nombre_usuario @aprendiz.Apellido_usuario</li>
    }
</ul>

@Html.ActionLink("Asociar Nuevo Aprendiz", "Crear_FichaAprendiz", new { fichaId = ViewBag.FichaId }, new { @class = "btn btn-primary" })

<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Gestionar Aprendiz</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Aprendiz</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
                <!-- Bookmark Start-->
                <div class="bookmark">
                    <ul>
                        <li><a href="javascript:void(0)" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Tables"><i data-feather="inbox"></i></a></li>
                        <li><a href="javascript:void(0)" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Chat"><i data-feather="message-square"></i></a></li>
                        <li><a href="javascript:void(0)" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Icons"><i data-feather="command"></i></a></li>
                        <li><a href="javascript:void(0)" data-container="body" data-bs-toggle="popover" data-placement="top" title="" data-original-title="Learning"><i data-feather="layers"></i></a></li>
                        <li>
                            <a href="javascript:void(0)"><i class="bookmark-search" data-feather="star"></i></a>
                            <form class="form-inline search-form">
                                <div class="form-group form-control-search">
                                    <input type="text" placeholder="Search..">
                                </div>
                            </form>
                        </li>
                    </ul>
                </div>
                <!-- Bookmark Ends-->
            </div>
        </div>
    </div>
</div>
<!-- Individual column searching (text inputs) Starts-->
<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Tabla de datos - Aprendiz</h5>
            <br />
            <button class="btn btn-light"><a href="@Url.Action("Create","UsuariosAprendiz")">Crear</a></button>
        </div>
        @using (Html.BeginForm("Index", "UsuariosAprendiz", FormMethod.Get))
        {
            <label for="estadoFiltro">Estado:</label>
            <select id="estadoFiltro" name="estadoFiltro">
                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
            </select>
            <input type="submit" value="Filtrar" />
        }
        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "UsuariosAprendiz")'">
                Generar Reporte PDF
            </button>
            <div class="table-responsive">
                <table class="display datatables" id="ajax-data-object">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Documento</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            @*<th>Id Ficha</th>*@
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Tipo_Documento_usuario)
                                    @Html.DisplayFor(model => item.Documento_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Nombre_usuario)
                                    @Html.DisplayFor(model => item.Apellido_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Correo_usuario)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => item.Id_ficha)
                                </td>
                                @*<td>

                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_usuario }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id_usuario })
                                </td>*@

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Documento</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            @*<th>Id Ficha</th>*@
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
