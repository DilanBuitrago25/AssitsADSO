<!-- Individual column searching (text inputs) Starts-->
<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Tabla de datos - Fichas</h5>
            <br />
            <button class="btn btn-light"><a href="@Url.Action("Create","Fichas")">Crear</a></button>
        </div>
        @using (Html.BeginForm("Index", "Fichas", FormMethod.Get))
        {
            <label for="estadoFiltro">Estado:</label>
            <select id="estadoFiltro" name="estadoFiltro">
                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
            </select>
            <input type="submit" value="Filtrar" />
        }
    <div class="card-body">
        <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "Fichas")'">
            Generar Reporte PDF
        </button>
        <div class="table-responsive">
            <table class="display" id="row-select-delete">
                <thead>

                    <tr>
                        <th>Codigo</th>
                        <th>Jornada</th>
                        <th>Modalidad</th>
                        <th>Instructor(es)</th>
                        <th>Programa de formación</th>
                        <th> </th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Codigo_ficha)</td>
                            <td>@Html.DisplayFor(model => item.Jornada_ficha)</td>
                            <td>@Html.DisplayFor(model => item.Modalidad_ficha)</td>
                            <td>
                                @Html.DisplayFor(model => item.Usuario.Nombre_usuario) 
                                @Html.DisplayFor(model => item.Usuario.Apellido_usuario)
                            </td>
                            <td>@Html.DisplayFor(model => item.Programa_formacion.Nombre_programa)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id_ficha }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id_ficha }) |
                                @Html.ActionLink("Aprendices", "Aprendices_Ficha", new { id = item.Id_ficha })
                            </td>

                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>Codigo</th>
                        <th>Jornada</th>
                        <th>Modalidad</th>
                        <th>Instructor(es)</th>
                        <th>Programa de formación</th>
                        <th> </th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    </div>
</div>

