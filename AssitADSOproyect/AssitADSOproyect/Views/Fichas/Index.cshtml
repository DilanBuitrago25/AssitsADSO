@model IEnumerable<ClaseDatos.Ficha>

@{
    ViewBag.Title = "Index";
}

<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Gestionar Fichas</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Fichas</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
               
            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="row">
            <div class="card-header d-flex align-items-center">
                <div class="col-sm-4">
                    <h5>Tabla de datos - Fichas</h5>
                    <br />
                    @using (Html.BeginForm("Index", "Fichas", FormMethod.Get))
                    {
                        <div class="d-flex align-items-center">
                            <label for="estadoFiltro" class="me-2">Estado:</label>
                            <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    @if (@Session["TipoUsuario"].ToString() == "InstructorAdmin")
                    {
                        <button class="btn btn-light"><a href="@Url.Action("Create", "Fichas")">Crear</a></button>
                    }
                </div>
            </div>
        </div>  
        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "Fichas")'" id="BottomPdf">
                Generar Reporte PDF
            </button>
            <div class="table-responsive">
                <table class="display" id="row-select-delete">
                    <thead>

                        <tr>
                            <th>Codigo</th>
                            <th>Jornada</th>
                            <th>Modalidad</th>
                            <th>Tipo</th>
                            <th>Programa de formación</th>
                            <th> </th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Codigo_ficha)</td>
                                @*<td>@Html.DisplayFor(model => item.Nombre_ficha)</td>*@
                                <td>@Html.DisplayFor(model => item.Jornada_ficha)</td>
                                <td>@Html.DisplayFor(model => item.Modalidad_ficha)</td>
                                <td>@Html.DisplayFor(model => item.tipo_ficha)</td>
                                <td>@Html.DisplayFor(model => item.Programa_formacion.Nombre_programa)</td>
                                <td>
                                    @if (@Session["TipoUsuario"].ToString() == "InstructorAdmin")
                                    {
                                        @Html.ActionLink("Editar", "Edit", new { id = item.Id_ficha })
                                    } |
                                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_ficha }) |
                                    @Html.ActionLink("Aprendices", "Aprendices_Ficha", new { id = item.Id_ficha }) |
                                    @Html.ActionLink("Instructores", "Instructores_Ficha", new { id = item.Id_ficha })
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Codigo</th>
                            <th>Jornada</th>
                            <th>Modalidad</th>
                            <th>Tipo</th>
                            <th>Programa de formación</th>
                            <th> </th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

