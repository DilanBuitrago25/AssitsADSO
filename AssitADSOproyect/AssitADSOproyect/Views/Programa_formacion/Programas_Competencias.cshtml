@model IEnumerable<ClaseDatos.Competencia>




<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Competencias asociados al programa: @ViewBag.NombrePrograma</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Programa de Formacion</li>
                    <li class="breadcrumb-item">@ViewBag.NombrePrograma</li>
                    <li class="breadcrumb-item active">Consultar Competencias</li>
                </ol>
            </div>
            <div class="col-sm-6">
              
            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="row">
            <div class="card-header d-flex align-items-center">
                <div class="col-sm-4">
                    <h5>Tabla de datos - Competencias</h5>
                    <br />
                    @using (Html.BeginForm("Index", "Programa_formacion", FormMethod.Get))
                    {
                        <div class="d-flex align-items-center">
                            <label for="estadoFiltro" class="me-2">Estado:</label>
                            <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    @Html.ActionLink("Asociar Nueva Competencia", "Programas_Competencias_Asociar", new { programaId = ViewBag.ProgramaId }, new { @class = "btn btn-primary" })
                </div>
            </div>
        </div>
        
        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "Competencias")'" style="margin-bottom: 15px;">
                Generar Reporte PDF
            </button>

            <div class="table-responsive">
                <table class="display datatables" id="ajax-data-object">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Nombre</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id_competencia)</td>
                                <td>@Html.DisplayFor(model => item.tipo_competencia)</td>
                                <td>@Html.DisplayFor(model => item.Nombre_competencia)</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Nombre</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <div class="col-sm-12 d-flex justify-content-end">
                <button class="btn btn-light" type="button" style="margin-top: 15px;"><a href="@Url.Action("Index","Competencias")">Volver</a></button>
            </div>
        </div>
    </div>
</div>


