@model ClaseDatos.Programa_formacion

@{
    ViewBag.Title = "Edit";
}


<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Gestionar Programa de Formación</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Programa de Formación</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Editar</li>
                </ol>
            </div>
            <div class="col-sm-6">
               
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header pb-0">
                        <h5>Editar Programas</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col">

                                @Html.AntiForgeryToken()
                                <form>
                                    @Html.HiddenFor(model => model.Id_programa)
                                    <div class="mb-3 input-group-solid">
                                        <label class="form-label">Nombre Programa</label>
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Nombre_programa, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Nombre_programa, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 input-group-solid">
                                        <label class="form-label">Tipo Programa</label>
                                        <div class="input-group">
                                         @Html.DropDownListFor(model => model.Tipo_programa, new List<SelectListItem>
                                            {
                                                new SelectListItem { Text = "Tecnologo", Value = "Tecnologo" },
                                                new SelectListItem { Text = "Tecnico", Value = "Tecnico" },
                                                new SelectListItem { Text = "Especializacion", Value = "Especializacion" },
                                                new SelectListItem { Text = "Curso corto", Value = "Curso corto" },
                                                new SelectListItem { Text = "Curso Complementario", Value = "Curso Complementario" }
                                            }, new { @class = "form-control" })
                                         @Html.ValidationMessageFor(model => model.Tipo_programa, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 input-group-solid">
                                        <label class="form-label">Duración Programa</label>
                                        <div class="input-group">
                                            @Html.EditorFor(model => model.Duracion_programa, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Duracion_programa, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="mb-3 input-group-solid">
                                        <label class="form-label">Estado Programa Formacion</label>
                                        <div class="input-group">
                                            @Html.DropDownListFor(model => model.Estado_Programa_formacion, new List<SelectListItem>
                                                {
                                                     new SelectListItem { Text = "Activo", Value = "True" },
                                                     new SelectListItem { Text = "No Activo", Value = "False" },
                                                }, new { @class = "form-control" })

                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary m-r-15" type="submit">Confirmar</button>
                        <button class="btn btn-light" type="button"><a href="@Url.Action("Index","Programa_formacion")">Cancelar</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<script>
    // Elimina el atributo 'readonly' al cargar la página
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('@Html.IdFor(model => model.Id_programa)').removeAttribute('readonly');
    });
    document.addEventListener('DOMContentLoaded', function () {
        var inputs = document.querySelectorAll('.form-control');
        inputs.forEach(function (input) {
            input.removeAttribute('readonly');
        });
    });
</script>

