<!-- Individual column searching (text inputs) Starts-->
<div class="col-sm-12">
    <div class="card">
        <div class="card-header">
            <h5>Individual column searching (text inputs) </h5><span>The searching functionality provided by DataTables is useful for quickly search through the information in the table - however the search is global, and you may wish to present controls that search on specific columns.</span>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="display" id="row-select-delete">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Duracion</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id_programa)</td>
                                <td>@Html.DisplayFor(model => item.Nombre_programa)</td>
                                <td>@Html.DisplayFor(model => item.Tipo_programa)</td>
                                <td>@Html.DisplayFor(model => item.Duracion_programa)</td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_programa }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id_programa })
                                </td>

                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Duracion</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

