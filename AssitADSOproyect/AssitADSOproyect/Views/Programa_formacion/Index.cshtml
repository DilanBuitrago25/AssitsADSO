@model IEnumerable<ClaseDatos.Programa_formacion>

@{
    ViewBag.Title = "Index";
}

<br />
<div class="container-fluid">
    <div class="page-header">
        <div class="row">
            <div class="col-sm-6">
                <h3>Gestionar Programas</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Instructor")">Home</a></li>
                    <li class="breadcrumb-item">Programa Formación</li>
                    <li class="breadcrumb-item">General</li>
                    <li class="breadcrumb-item active">Consultar</li>
                </ol>
            </div>
            <div class="col-sm-6">
            </div>
        </div>
    </div>
</div>
<div class="col-sm-12">
    <div class="card">
        <div class="row">
            <div class="card-header d-flex align-items-center">
                <div class="col-sm-4">
                    <h5>Tabla de datos - Programas de Formación</h5>
                    <br />
                    @using (Html.BeginForm("Index", "Programa_formacion", FormMethod.Get))
                    {
                        <div class="d-flex align-items-center">
                            <label for="estadoFiltro" class="me-2">Estado:</label>
                            <select class="form-select me-2" id="estadoFiltro" name="estadoFiltro">
                                <option value="" @(ViewBag.EstadoFiltro == "" ? "selected" : "")>Todos</option>
                                <option value="true" @(ViewBag.EstadoFiltro == "true" ? "selected" : "")>Activo</option>
                                <option value="false" @(ViewBag.EstadoFiltro == "false" ? "selected" : "")>No Activo</option>
                            </select>
                            <input class="btn btn-success btn-sm" type="submit" value="Filtrar" />
                        </div>
                    }
                </div>
                <div class="col-sm-8 d-flex justify-content-end">
                    <button class="btn btn-light"><a href="@Url.Action("Create","Programa_formacion")">Crear</a></button>
                </div>
            </div>
        </div>
       
        <div class="card-body">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("GenerarReportePDF", "Programa_formacion")'" id="BottomPdf">
                Generar Reporte PDF
            </button>
            <div class="table-responsive">
                <table class="display" id="example-style-1">
                    <thead>

                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Duracion</th>
                            <th>Acciones</th>
                        </tr>

                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id_programa)</td>
                                <td>@Html.DisplayFor(model => item.Nombre_programa)</td>
                                <td>@Html.DisplayFor(model => item.Tipo_programa)</td>
                                <td>@Html.DisplayFor(model => item.Duracion_programa)</td>
                                <td>
                                    @Html.ActionLink("Editar", "Edit", new { id = item.Id_programa }) |
                                    @Html.ActionLink("Detalles", "Details", new { id = item.Id_programa }) |
                                    @Html.ActionLink("Competencias", "Programas_Competencias", new { id = item.Id_programa })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Tipo</th>
                            <th>Duracion</th>
                            <th>Acciones</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

