@model ClaseDatos.Competencia

@using (Html.BeginForm("Programas_Competencias_Asociar", "Programa_formacion", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Competencia")
        @Html.DropDownList("competenciaId", new SelectList(ViewBag.CompetenciasDisponibles, "Id_competencia", "Nombre_competencia"), "Selecciona una Competencia", new { @class = "form-control" })
    </div>

    <input name="programaId" value="@ViewBag.ProgramaId" />

    <button type="submit" class="btn btn-primary">Asociar Competencia</button>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
